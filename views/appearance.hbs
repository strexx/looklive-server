<section class="appearance" data-id="{{ item.id }}">
    <section class="appearance-left">
        <img src="{{ item.image.url }}"> {{#each item.product_occurrences}}
        <div class="product-indicator" style="top: {{position.y}}%; left: {{position.x}}%;" data-uuid="{{product.id}}"></div>
        {{/each}}
    </section>
    <section class="appearance-right">
        <h1><img class="avatar" src="{{ item.subject.avatar.url }}"> {{ item.subject.name }}</h1>
        <h2>{{ item.title }}</h2>

        <section class="appearance-products">
            <h1>Products</h1>
            <div class="appearance-products-inner">
                {{#each products}}
                <section class="product" data-uuid="{{id}}">
                    <div class="actual">
                        <div class="image">
                            <h1>Actual</h1>
                            <img src="{{image.url}}">
                        </div>
                        <div class="info">
                            <h1>{{ name }}</h1>
                            <h2>{{ brand.name }}</h2>
                        </div>
                    </div>
                    {{#each similars}}
                    <div class="similar">
                        <div class="image">
                            <h1>{{ similar_type }}</h1>
                            <img src="{{image.url}}">
                        </div>
                        <div class="info">
                            <h1>{{ name }}</h1>
                            <h2>{{ brand.name }}</h2>
                        </div>
                    </div>
                    {{/each}}
                </section>
                {{/each}}
            </div>
        </section>
    </section>
</section>
